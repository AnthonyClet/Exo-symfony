{% extends '../base.html.twig' %}

{% block style %}{{ asset('assets/css/style.css') }}{% endblock style %}

{% block title %} Show_article {% endblock title %}

{% block main %}

    <section class="articles-container">

        <article class="article">
            <a href="{{ path('show_article', {'id': article.id}) }}">
                <h1>{{article.title}}</h1>
            </a>
            <p>{{ article.content }}</p>
        </article>

    </section>

{% endblock %}